/**
 * Implements hook_theme_suggestions_HOOK_alter().
 */
function parade_theme_suggestions_page_alter(&$suggestions, $variables) {
  // Add content type suggestions based on machine_name field and content type.
  // e.g. page--node--parade.html.twig
  // page--node--parade--my-awesome-page.html.twig.
  // @todo Check for any nodes which has Parade field (entity_revisions_paragraphs_preview).
  $attributes = Drupal::request()->attributes;
  if (!$attributes->has('_entity_form') && $attributes->get('_entity_form') !== "node.edit" && $node = $attributes->get('node')) {
    $type = (is_object($node) && method_exists($node, 'getType')) ? $node->getType() : 'parade';
    array_unshift($suggestions, 'page__node__' . $type);
    if (method_exists($node, 'hasField') && $node->hasField('field_machine_name')) {
      if ($machine_name = $node->get('field_machine_name')->value) {
        $suggestions[] = 'page__node__' . $type . '__' . $machine_name;
      }
    }
  }
}

/**
 * Implements hook_theme_suggestions_HOOK_alter().
 */
function parade_theme_suggestions_paragraph_alter(array &$suggestions, array $variables) {
  // Add custom suggestions for Paragraph types with machine name.
  // @todo Check for any nodes which has Parade field (entity_revisions_paragraphs_preview).
  $attributes = Drupal::request()->attributes;
  $node = $attributes->get('node');
  if (
    !$attributes->has('_entity_form') &&
    $attributes->get('_entity_form') !== "node.edit" &&
    $attributes->has('node') &&
    method_exists($node, 'hasField') &&
    $node->hasField('field_machine_name')
  ) {
    if (is_object($node) && ($machine_name = $node->get('field_machine_name')->value)) {
      /** @var string[] $suggestions */
      $parade_suggestions = [];
      foreach ($suggestions as $suggestion) {
        $parade_suggestions[] = preg_replace("/^paragraph__/", 'paragraph__' . $machine_name . "__", $suggestion);
      }
      $suggestions = array_merge($suggestions, $parade_suggestions);
    }
  }
}

/**
 * Populates TWIG variables with Parade related data.
 *
 * E.g.: $variables['parade']['test'] becomes
 * {{ parade.test }} in the templates.
 *
 * @param array &$variables
 *   The core $variables passed by reference.
 * @param array $data
 *   New data in array format, which will be passed to the template.
 *
 * @return bool|array
 *   The new data.
 *
 * @internal
 */
function _parade_add_template_variable(array &$variables, array $data = NULL) {
  if (!$data) {
    return FALSE;
  }

  // Array root of Parade related data in TWIG.
  // Example usage:
  // {{ parade.background.url }}
  // {{ parade.layout }}.
  static $key = 'parade';

  if (!isset($variables[$key])) {
    $variables[$key] = $data;
  }
  else {
    $variables[$key][] = $data;
  }

  return $data;
}

/**
 * Implements hook_form_alter().
 *
 * Modify "Add sections".
 */
function parade_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  // Modify the Paragraphs field.
  // @todo Check the field formatter instead!
  /** @var FormStateInterface $form */
  if (isset($form['field_paragraphs'])) {
    $form['#attached']['library'][] = 'parade/buttons';

    foreach ($form['field_paragraphs']['widget']['add_more'] as $key => $item) {
      if (strpos($key, 'add_more') === FALSE) {
        continue;
      }
      $type = Html::getClass($item['#bundle_machine_name']);
      $form['field_paragraphs']['widget']['add_more'][$key]['#attributes']['class'][] = 'parade-button';
      $form['field_paragraphs']['widget']['add_more'][$key]['#attributes']['class'][] = 'parade-button-' . $type;
    }
  }
  // If this is a GA admin settings page, we add our UI for handling domain
  // specific GA account IDs.
  if ($form_id == "google_analytics_admin_settings" && !empty($form['general'])) {
    $module_handler = \Drupal::moduleHandler();
    if ($module_handler->moduleExists('domain') && $module_handler->moduleExists('domain_config') && $module_handler->moduleExists('google_analytics')) {
      /* @var Drupal\domain\Entity\Domain[] $domains */
      $domains = \Drupal::service('domain.loader')->loadMultipleSorted();

      // Add new tab under General settings.
      $index_for_split = array_search("general", array_keys($form)) + 1;
      $form = array_merge(
        array_slice($form, 0, $index_for_split, TRUE),
        [
          "domain_specific" => [
            '#type'                            => 'details',
            '#title'                           => t('Domain specific settings'),
            '#open'                            => TRUE,
            '#description'                     => t('Set these values to override the General settings.'),
            'google_analytics_account_domains' => [
              '#tree' => TRUE,
            ],
          ]
        ],
        array_slice($form, $index_for_split, count($form) - $index_for_split, TRUE)
      );

      $config_factory = \Drupal::configFactory();
      $cicle_count = 0;
      // Add Web property ID field / domain.
      foreach ($domains as $domain) {
        $domain_id = $domain->id();

        $config = $config_factory->get('domain.config.' . $domain_id . '.google_analytics.settings');
        $form['domain_specific']['google_analytics_account_domains'][$domain_id] = [
          '#type'       => 'container',
          '#attributes' => [
            'class' => [
              'google-analytics-account-domains',
              'google-analytics-account-domains-' . $cicle_count,
              ($cicle_count % 2 == 0 ? "odd" : "even"),
            ],
          ],
        ];
        $form['domain_specific']['google_analytics_account_domains'][$domain_id]['value'] = [
          '#default_value' => $config->get('account'),
          '#maxlength'     => 20,
          '#placeholder'   => 'UA-',
          '#size'          => 15,
          '#title'         => t('Overwrite Web Property ID for %website_url', array('%website_url' => $domain->getPath() . ($domain->isDefault() ? " (" . t("default domain") . ")" : ""))),
          '#description'   => $form['general']['google_analytics_account']['#description'],
          '#type'          => 'textfield',
        ];
        $form['domain_specific']['google_analytics_account_domains'][$domain_id]['use_default_value'] = [
          '#type'          => 'checkbox',
          '#title'         => t('Use value from General settings'),
          '#description'   => t('Check this to use default value from under General settings for this domain. If this isn\'t checked, but the textfield is empty, the GA won\'t be used for this domain.'),
          '#default_value' => (($config->get('account_use_default_value') !== NULL) ? $config->get('account_use_default_value') : "1"),
        ];

        $cicle_count++;
      }

      // Add custom event handler for Web property ID field / domain.
      $form['#submit'][] = "parade_save_google_analytics_domain_settings_handler";

      // Add library.
      $form['#attached']['library'][] = 'parade/domain.ga';
    }
  }
}

/**
 * Custom event handler for Web property ID field / domain.
 */
function parade_save_google_analytics_domain_settings_handler($form, \Drupal\Core\Form\FormStateInterface $form_state) {
  // If has Web property ID field / domain data submited.
  if ($form_state->hasValue('google_analytics_account_domains')) {
    $gaa_domains = $form_state->getValue('google_analytics_account_domains');

    // Go throw all the specific domain settings.
    $config_factory = \Drupal::configFactory();
    foreach ($gaa_domains as $domain_id => $domain_values) {
      $config_factory_edit = $config_factory->getEditable('domain.config.' . $domain_id . '.google_analytics.settings');
      // Set back default value.
      if ($domain_values['use_default_value'] == "1") {
        $config_factory_edit->clear('account')
          ->set('account_use_default_value', $domain_values['use_default_value'])
          ->save();
      }
      // Set custom value.
      else {
        $config_factory_edit->set('account', $domain_values['value'])
          ->set('account_use_default_value', $domain_values['use_default_value'])
          ->save();
      }
    }
  }
}

/**
 * Implements hook_preprocess_HOOK().
 */
function parade_preprocess_field__field_social_link(&$variables) {
  // @todo @fixme Sad but true.
  foreach ($variables['items'] as $key => $link) {
    if (strpos($link['content']['#title'], 'facebook') !== FALSE) {
      $type = 'facebook';
    }
    elseif (strpos($link['content']['#title'], 'twitter') !== FALSE) {
      $type = 'twitter';
    }
    elseif (strpos($link['content']['#title'], 'google') !== FALSE) {
      $type = 'google';
    }
    elseif (strpos($link['content']['#title'], 'linkedin') !== FALSE) {
      $type = 'linkedin';
    }
    elseif (strpos($link['content']['#title'], 'youtube') !== FALSE) {
      $type = 'youtube';
    }
    else {
      $type = 'unknown';
    }
    $variables['items'][$key]['content']['#options']['attributes']['class'] = [
      'social',
      'social-' . $type,
    ];
  }
}

/**
 * Implements hook_form_BASE_FORM_ID_alter() for \Drupal\node\NodeForm.
 *
 * Move Parade domain front fields to an advanced tab like other node settings.
 */
function parade_form_node_form_alter(&$form, FormState $form_state, $form_id) {
  if (isset($form['domain'])) {
    $module_handler = \Drupal::moduleHandler();
    if ($module_handler->moduleExists('domain') && $module_handler->moduleExists('domain_access') && $module_handler->moduleExists('domain_config')) {
      $default_value = [];
      $options = ['none' => t('None')->render()];
      $options_dyn = [];
      $config_factory = \Drupal::configFactory();
      $node = \Drupal::routeMatch()->getParameter('node');
      $path_array = [
        'alias'  => $node->toUrl()->toString(),
        'source' => '/node/' . $node->id()
      ];
      /* @var Drupal\domain\Entity\Domain[] $domains */
      $domains = \Drupal::service('domain.loader')->loadMultipleSorted();
      foreach ($domains as $domain) {
        $key = $domain->id();
        // Collecting selectable values.
        $options_dyn[$key] = $domain->get('name');

        // Collecting default values.
        $front_url = $config_factory->get('domain.config.' . $key . '.system.site')
          ->get('page.front');
        if ($front_url == $path_array['alias'] || $front_url == $path_array['source']) {
          $default_value[] = $key;
        }
      }
      $options = array_merge($options, $options_dyn);
      // If we didn't found any default value to this node, we set the 'none'.
      if (empty($default_value)) {
        $default_value[] = 'none';
      }

      // Put out checkboxes for front page selection.
      $form['field_domains_front_page'] = [
        '#type'              => 'container',
        '#parents'           => [
          'field_domain_front_page_wrapper',
        ],
        'domains_front_page' => [
          '#type'          => 'checkboxes',
          '#title'         => t('Select which domains\' frontpage will be this node'),
          '#options'       => $options,
          '#cache'         => [
            'contexts' => [],
            'tags'     => [],
            'max-age'  => -1,
          ],
          '#attributes'    => [
            'class' => [
              'field--type-entity-reference',
              'field--name-field-domain-front-page',
              'field--widget-options-buttons',
            ],
          ],
          '#field_name'    => 'domains_front_page',
          '#default_value' => $default_value,
        ],
        '#group'             => "domain",
        '#weight'            => 50,
        '#access'            => TRUE,
      ];

      // Set a custom submit function.
      foreach ($form['actions'] as $key => $element) {
        // Redirect submit handlers, but not the preview button.
        if ($key != 'preview' && isset($element['#type']) && $element['#type'] == 'submit') {
          $form['actions'][$key]['#submit'][] = 'parade_domain_front_page_form_submit_handler';
        }
      }

      // Add library.
      $form['#attached']['library'][] = 'parade/domain.front-page';
    }
  }
}

/**
 * Custom form action handler.
 *
 * This sets front page values.
 */
function parade_domain_front_page_form_submit_handler($form, \Drupal\Core\Form\FormStateInterface $form_state) {
  // If domain front page checkbox values was sent.
  if ($form_state->hasValue('domains_front_page')) {
    $domains = $form_state->getValue('domains_front_page');
    $path_array = reset($form_state->getValue('path'));
    $path = $path_array['alias'] ? $path_array['alias'] : $path_array['source'];

    // If none is selected, we delete all those front page settings, where this
    // node is the front page.
    if (!empty($domains['none'])) {
      parade_delete_all_domain_front_page($path_array);
    }
    // If not none is selected.
    else {
      // Here isn't needed the none value, so delete it.
      unset($domains['none']);

      // Go throw the domains and set the config files.
      $config_factory = \Drupal::configFactory();
      foreach ($domains as $key => $value) {
        // If the value is 0 (or empty) we need to set to the default page
        // (original front page), if this node is set to this domain.
        if (empty($value)) {
          $conf_path = $config_factory->get('domain.config.' . $key . '.system.site')
            ->get('page.front');
          if ($conf_path == $path_array['alias'] || $conf_path == $path_array['source']) {
            $config_factory->getEditable('domain.config.' . $key . '.system.site')
              ->set('page.front', '/')
              ->save();
          }
        }
        // If the value is not empty, we set the new front page.
        else {
          $config_factory->getEditable('domain.config.' . $key . '.system.site')
            ->set('page.front', $path)
            ->save();
        }
      }
    }
  }
}

/**
 * Delete all domains' front pages.
 *
 * Delete all domains' front page where the current node is set as the front
 * page.
 *
 * @param $path_array
 *   A path array with an alias and a source key.
 *
 * @use
 *   Domain.
 */
function parade_delete_all_domain_front_page($path_array) {
  /* @var Drupal\domain\Entity\Domain[] $domains */
  $domains = \Drupal::service('domain.loader')->loadMultiple();

  $config_factory = \Drupal::configFactory();
  foreach (array_keys($domains) as $domain_id) {
    $conf_path = $config_factory->get('domain.config.' . $domain_id . '.system.site')
      ->get('page.front');
    if ($conf_path == $path_array['alias'] || $conf_path == $path_array['source']) {
      $config_factory->getEditable('domain.config.' . $domain_id . '.system.site')
        ->set('page.front', '/')
        ->save();
    }
  }
}

/**
 * Implements hook_ENTITY_TYPE_delete() for node entities.
 *
 * Delete front page link if node is delete.
 *
 * @use
 *   Domain.
 *
 * @param \Drupal\Core\Entity\EntityInterface $node
 *   It will delete those front page links, which is connects to this node.
 */
function parade_node_delete(EntityInterface $node) {
  /* @var Drupal\domain\Entity\Domain[] $domains */
  $domains = \Drupal::service('domain.loader')->loadMultiple();
  $path_array = ['alias'  => $node->toUrl()->toString(),
                 'source' => '/node/' . $node->id()
  ];

  $config_factory = \Drupal::configFactory();
  foreach (array_keys($domains) as $domain_id) {
    $conf_path = $config_factory->get('domain.config.' . $domain_id . '.system.site')
      ->get('page.front');
    if ($conf_path == $path_array['alias'] || $conf_path == $path_array['source']) {
      $config_factory->getEditable('domain.config.' . $domain_id . '.system.site')
        ->set('page.front', '/')
        ->save();
    }
  }
}
