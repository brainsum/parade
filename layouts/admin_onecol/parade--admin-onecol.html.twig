{#
/**
 * @file
  * Theme implementation for a parade admin one column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'layout',
    'layout--parade',
    'layout--parade-admin',
    'layout--parade-admin-onecol',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="layout__region layout__region--top">
      {{ content.top }}
    </div>
    <div class="layout__region layout__region--content">
      {{ content.content }}
    </div>
  </div>
{% endif %}
