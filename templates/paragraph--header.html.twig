{#
/**
 * @file
 * HEADER paragraph template.
 *
 * @todo replace current parallax/video libraries with ONE single library,
 *       that supports both images and video!
 */
#}
{%
set classes = [
  'paragraph',
  parade.enable_parallax ? 'paragraph--parallax',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}

<div{{ attributes.addClass(classes) }} >

  {% if view_mode != 'preview' %}
    <div class="bg-wrapper">
      {% if parade.background.type == 'image' %}
        {% if parade.enable_parallax %}
          <img class="bg-image bg-parallax" src="{{- parade.background.url -}}">
        {% else %}
          <div class="bg-image bg-static" style="background-image: url({{- parade.background.url -}});"></div>
        {% endif %}
      {% elseif parade.background.type == 'video' %}
        <video class="bg-video bg-parallax" autoplay muted loop playsinline poster="{{ parade.background.poster }}">
          <source src="{{ parade.background.url }}" type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"'>
          <img src="{{ parade.background.poster }}" title="Your browser does not support the <video> tag">
        </video>
      {% endif %}
    </div>
  {% endif %}

  <section class="paragraph-inner">
    {{ content }}
  </section>
</div>
