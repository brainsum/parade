{#
/**
 * @file
 * TEXT BOX paragraph
 */
#}
{%
set classes = [
'paragraph',
'paragraph--type--' ~ paragraph.bundle|clean_class,
view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
view_mode != 'preview' ? 'col',
view_mode != 'preview' ? 'col-' ~ parade.columns|default('3')
]
%}

<div{{ attributes.addClass(classes) }}>
  <div class="paragraph-inner clearfix">
    {{ content }}
  </div>
</div>
